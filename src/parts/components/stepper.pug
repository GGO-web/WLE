<div class="stepper">
   <button aria-label="Уменьшить количество" class="stepper__down btn-reset"></button>
   <label class="stepper__label">
      <input type="number" min="1" max="100" class="stepper__counter" value="1">
   </label>
   <button aria-label="Увеличить количество" class="stepper__up btn-reset"></button>
</div>
